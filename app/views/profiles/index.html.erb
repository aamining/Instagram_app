<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Age</th>
      <th>Gender</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <div class="thumbnail">
            <div class="caption">

              <td><%=image_tag(@profile.picture)%></td>
              <td><%= @profile.name %></td>
              <td><%= @profile.username %></td>
              <td><%= @profile.age %></td>
              <td><%= @profile.gender %></td>
              <td><%= @profile.user %></td>


              <td><%= link_to 'Show', profile_path(@profile.id) %></td>
              <!-- (@profile.id) is showing how to show :id mentioned in routes in our link path -->
              <td><%= link_to 'Edit', edit_profile_path(@profile.id) %></td>
              <td><%= link_to 'Destroy', profile_path(@profile.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
          </div>
        </div>
      </div>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
