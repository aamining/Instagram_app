<p id="notice"><%= notice %></p>

<h1>Current User Posts</h1>
<%= link_to 'New Post', new_post_path %>

<% @posts.each do |post| %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="thumbnail">
        <div class="caption">
        </div>
        <%=image_tag(post.image_url, class: "img-responsive")%>
        <p><%= post.profile.name %></p>
        <p><%= post.status  %></p>
        <p><%= post.user.email %></p>
        <%= link_to '🏞', post %>
        <%= link_to '✍', edit_post_path(post) %>
        <%= link_to '🔨', post, method: :delete, data: { confirm: 'Are you sure?' } %>

      </div>
    </div>
  </div>
</div>
<% end %>
